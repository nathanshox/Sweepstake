<h1>London 2012 Sweepstake</h1>
<h2>People Leaderboard</h2>
<p>
  <%= link_to 'Switch to Country leaderboards', leaderboards_countries_url, :class => "btn btn-info btn-large" %>
<p>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Points</th>
    <tr>
  </thead>
  <tbody>
  <% @people.each do |person| %>
    <tr>
      <td><%= person.name %></td>
      <td><a href="#" rel="tooltip" title="<%= person.points.to_s %>"><strong><%= person.points.truncate(3) %></strong></a></td>
    </tr>
  <% end %>
  </tbody>
</table>